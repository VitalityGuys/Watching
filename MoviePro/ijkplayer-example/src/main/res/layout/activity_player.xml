<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- The main content view -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <tv.danmaku.ijk.media.example.widget.media.IjkVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <master.flame.danmaku.ui.widget.DanmakuView
            android:id="@+id/danmaku_view"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_marginTop="20dip"
            android:background="@color/bilibili_pink"/>

        <!--播放速度布局-->
        <LinearLayout
            android:id="@+id/speedlayout"
            android:layout_width="200dip"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:background="@color/ijk_transparent_dark"
            android:visibility="invisible">
            <TextView
                android:id="@+id/mQuarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dip"
                android:text="0.25X"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/mHalf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dip"
                android:text="0.5X"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/mThreeQuarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dip"
                android:text="0.75X"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/mNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dip"
                android:text="1.0X"
                android:textColor="@color/bilibili_pink"/>
            <TextView
                android:id="@+id/mFiveQuarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dip"
                android:text="1.25X"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/mSixQuarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dip"
                android:text="1.5X"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/mSevenQuarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dip"
                android:text="1.75X"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/mDouble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dip"
                android:text="2.0X"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!--选集布局-->
        <ScrollView
            android:id="@+id/selectnumscrolllayout"
            android:layout_width="wrap_content"
            android:layout_height="300dip"
            android:layout_gravity="end|center"
            android:padding="30dp"
            android:visibility="invisible">
            <GridLayout
                android:id="@+id/selectnumlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ijk_transparent_dark">
            </GridLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/loadprogressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleInverse"/>


        <TextView
            android:id="@+id/toast_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:background="@color/ijk_transparent_dark"
            android:padding="16dp"
            android:textSize="16sp"
            android:visibility="gone" />

        <TableLayout
            android:id="@+id/hud_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@color/ijk_transparent_dark"
            android:padding="8dp"
            android:visibility="invisible"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:background="@color/ijk_transparent_dark"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            tools:context=".toolbar_widget">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--返回-->
                <ImageView
                    android:id="@+id/toolbar_back"
                    android:layout_width="36dip"
                    android:layout_height="25dip"
                    android:src="@mipmap/back"
                    android:scaleType="centerInside"/>

                <!--标题-->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:text="测试频道"/>

                <!--设置-->
                <ImageButton
                    android:id="@+id/setting"
                    android:layout_width="36dip"
                    android:layout_height="25dip"
                    android:layout_gravity="end"
                    android:scaleType="centerInside"
                    android:src="@mipmap/setting2"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>

    <!-- The navigation drawer -->
    <FrameLayout android:id="@+id/right_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/ijk_transparent_dark" />
</LinearLayout>